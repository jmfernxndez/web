    .bloque {
        padding: 15px 25px;
        border: 1px solid #656dfe;
        margin: 15px;
        background-color: #58555550;
		backdrop-filter: blur(10px);
        cursor: pointer;
        border-radius: 9px;
    }

    .bloque:hover {
