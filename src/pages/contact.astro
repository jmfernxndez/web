---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact me - jmfernxndez" description=" ">
  <main>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h1>Contact</h1>
                <h2>Feel free to contact me</h2>
            </div>
            <div class="col-lg-9">
                <form action="https://formspree.io/f/mldjdena" method="POST">
                    <input type="text" name="name" id="name" placeholder="Name" required>
                    <input type="email" name="email" id="email" placeholder="Email" required>
                    <textarea name="message" id="message" placeholder="How can i help you?" required></textarea>
                    <div class="m-2">
                        <input type="checkbox" id="pp" name="pp" required/>
                        <label for="pp">I have read and accept the <a href="/privacy-policy" target="_blank">Privacy Policy</a>. I authorize the processing of my data to answer my query.</label>
                    </div>
                    <button type="submit">Send and contact</button>
                </form>
            </div>
        </div>
    </div>
  </main>
</Layout>

<style>
    main {
        margin-top: 150px;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    button {
        background-color: #656dfe;
        padding: 10px;
        border: 9px;
        color: #fff;
    }

    input, textarea {
        margin: 5px 0;
        border: 1px solid #656dfe;
        padding: 5px;
        border-radius: 9px;
    }

    textarea {
        height: 300px;
    }

    a {
        color: #fff;
    }
</style>