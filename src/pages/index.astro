  </main>

  <style>
    #bloque-enlace {
      height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    .foto {
      width: 250px;
      border-radius: 9px;
      height: 250px;
      object-fit: cover;
    }

    .btn {
      margin: 15px 0;
      padding: 10px;
      width: 100%;
      border: 1px solid #444444;
      font-weight: 500;
      border-radius: 8px;
      box-shadow: 0px 7px 0px -2px #444444;
      transition: all 0.3s ease-in-out;
      color: #444444;
      text-transform: uppercase;
    }

    .btn:hover {
      box-shadow: none;
    }
  </style>
