{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/index.html",
      "destination": "/"
    },
    {
      "source": "/index.php",
      "destination": "/"
    },
    {
      "source": "/:path*.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|pdf)",
      "destination": "/:path*.:ext"
    }
  ],
  "redirects": [
    {
      "source": "/:path+",
      "destination": "/",
      "permanent": true
    }
  ]
}
